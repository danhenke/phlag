#!/usr/bin/env bash
set -euo pipefail

PROJECT_ROOT="$(cd "$(dirname "${BASH_SOURCE[0]}")/.." && pwd)"
cd "$PROJECT_ROOT"

if ! docker compose ps --services | grep -q '^app$'; then
    echo "Docker Compose services are not running. Start them with 'docker compose up -d' before running admin tasks." >&2
    exit 1
fi

exec docker compose exec app php phlag "$@"

